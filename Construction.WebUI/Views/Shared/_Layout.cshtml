@using System.Configuration;
@using Construction.WebUI.AppCode;
@{
    string Domain = Request.Url.Scheme + "://" + Request.Url.Authority;
    string ProjectName = ConfigurationManager.AppSettings["ProjectName"];
    MainCode mainCode = new MainCode(Domain, Request.RawUrl);
    var Verifications = mainCode.GetVerifications();
   var contact= mainCode.GetContactInfos().FirstOrDefault();
}
<!DOCTYPE html>
<html lang="en" data-style-switcher-options="{'showBordersStyle': true, 'showLayoutStyle': false, 'showBackgroundColor': false, 'borderRadius': '0', 'changeLogo': false, 'colorPrimary': '#E04622', 'colorSecondary': '#EEAB26', 'colorTertiary': '#EAEFF3', 'colorQuaternary': '#080808'}">
<head>

    <!-- Basic -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ProjectName | @ViewBag.Title</title>
    @foreach (var item in Verifications)
    {
        <meta name="@item.VerificationKey" content="@item.VerificationValue" />
    }

    <meta name="description" content="@ViewBag.MetaDescription" />
    <meta name="keywords" content="@ViewBag.MetaKeywords" />


    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

    <!-- Web Fonts  -->
    <link id="googleFonts" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800%7CShadows+Into+Light&amp;display=swap" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="apple-touch-icon" sizes="57x57" href="@Domain/Content/assets/img/favicons/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="@Domain/Content/assets/img/favicons/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="@Domain/Content/assets/img/favicons/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="@Domain/Content/assets/img/favicons/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="@Domain/Content/assets/img/favicons/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="@Domain/Content/assets/img/favicons/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="@Domain/Content/assets/img/favicons/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="@Domain/Content/assets/img/favicons/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="@Domain/Content/assets/img/favicons/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="@Domain/Content/assets/img/favicons/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="@Domain/Content/assets/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="@Domain/Content/assets/img/favicons/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="@Domain/Content/assets/img/favicons/favicon-16x16.png">
    <link rel="manifest" href="@Domain/Content/assets/img/favicons/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="@Domain/Content/assets/img/favicons/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <link rel="preconnect" href="https://fonts.googleapis.com/">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@300;400;500;600;700;800;900&amp;family=Public+Sans:wght@100;200;300;400;500;600;700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="@Domain/Content/assets/css/app.min.css">
    <link rel="stylesheet" href="@Domain/Content/assets/css/fontawesome.min.css">
    <link rel="stylesheet" href="@Domain/Content/assets/css/style.css">
</head>
<body>

    <div class="preloader">
        <button class="th-btn style3 preloaderCls">Yüklemeyi Kapat</button>
        <div class="preloader-inner">
            <span class="loader"></span>
        </div>
    </div>

    <div class="th-menu-wrapper">
        <div class="th-menu-area text-center">
            <button class="th-menu-toggle">
                <i class="fal fa-times"></i>
            </button>
            <div class="mobile-logo">
                <a href="@Domain">
                    <img src="@Domain/Content/assets/img/logo.png" alt="Konta">
                </a>
            </div>
            <div class="th-mobile-menu">
                <ul>
                    @Html.Raw(mainCode.GetMobileMenu())
                    @*<li>
                            <a href="about.html">About Us</a>
                        </li>
                        <li class="menu-item-has-children">
                            <a href="#">Service</a>
                            <ul class="sub-menu">
                                <li>
                                    <a href="service.html">Service</a>
                                </li>
                                <li>
                                    <a href="service-details.html">Service Details</a>
                                </li>
                            </ul>
                        </li>

                        <li class="menu-item-has-children">
                            <a href="#">Blog</a>
                            <ul class="sub-menu">
                                <li>
                                    <a href="blog.html">Blog</a>
                                </li>
                                <li>
                                    <a href="blog-details.html">Blog Details</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="contact.html">Contact</a>
                        </li>*@
                </ul>
            </div>
        </div>
    </div>
    <header class="th-header header-layout7">
        <div class="header-top">
            <div class="container">
                <div class="header-top-inner">
                    <div class="row justify-content-center justify-content-md-between align-items-center gy-2">
                        <div class="col-auto d-none d-md-block">
                            <div class="header-links d-none d-md-block">
                                <ul>
                                    <li>
                                        <i class="fal fa-phone"></i>
                                        <a href="tel:@contact.Phone">@contact.Phone</a>
                                    </li>
                                    <li>
                                        <i class="fal fa-envelope"></i>
                                        <a href="mailto:@contact.Email">@contact.Email</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="header-links">
                                <ul>
                                    <li>
                                        @Html.Raw(mainCode.GetLang())
                                    </li>
                                    <li>
                                        <div class="header-social">
                                            @Html.Raw(mainCode.GetSocialMedia())
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="sticky-wrapper">
            <div class="sticky-active">
                <div class="menu-area">
                    <div class="container">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto">
                                <div class="logo-style1">
                                    <a href="@Domain">
                                        <img src="@Domain/Content/assets/img/logo.png" alt="@ProjectName">
                                    </a>
                                </div>
                            </div>
                            <div class="col-auto">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <nav class="main-menu d-none d-lg-inline-block">
                                            <ul>
                                                @Html.Raw(mainCode.GetMainMenu())
                                                @*<li class="menu-item-has-children">
                                                        <a href="index-2.html">Home</a>
                                                    </li>
                                                    <li>
                                                        <a href="about.html">About Us</a>
                                                    </li>
                                                    <li class="menu-item-has-children">
                                                        <a href="#">Service</a>
                                                        <ul class="sub-menu">
                                                            <li>
                                                                <a href="service.html">Service</a>
                                                            </li>
                                                            <li>
                                                                <a href="service-details.html">Service Details</a>
                                                            </li>
                                                        </ul>
                                                    </li>

                                                    <li>
                                                        <a href="contact.html">Contact</a>
                                                    </li>*@
                                            </ul>
                                        </nav>
                                        <button type="button" class="th-menu-toggle d-inline-block d-lg-none">
                                            <i class="far fa-bars"></i>
                                        </button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>


    @RenderBody()



    <footer class="footer-wrapper footer-layout7" data-bg-src="@Domain/Content/assets/img/bg/footer_bg_1.jpg">
        <div class="p-2 mt-5">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-md-6 col-xl-3">
                        <div class="widget footer-widget">
                            <div class="th-widget-about">
                                <div class="about-logo">
                                    <a href="index-2.html">
                                        <img src="@Domain/Content/assets/img/logo-dark.png" alt="@ProjectName">
                                    </a>
                                </div>
                                <p class="about-text"></p>
                                <div class="th-social">
                                    @Html.Raw(mainCode.GetSocialMedia())
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-auto">
                        <div class="widget widget_nav_menu footer-widget">
                            <h3 class="widget_title">Hizmetlerimiz</h3>
                            <div class="menu-all-pages-container">
                                <ul class="menu">
                                    @Html.Raw(mainCode.GetFooterService())
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-auto">
                        <div class="widget widget_nav_menu footer-widget">
                            <h3 class="widget_title">Projelerimiz</h3>
                            <div class="menu-all-pages-container">
                                <ul class="menu">
                                    @Html.Raw(mainCode.GetFooterProject())
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="copyright-wrap">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-lg-6">
                        <p class="copyright-text">
                            Copyright <i class="fal fa-copyright"></i>
                            @DateTime.Now.Year <a href="https://heliosdiji.com">@ProjectName</a>
                            . All Rights Reserved.
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </footer>
    <div class="scroll-top">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" style="transition: stroke-dashoffset 10ms linear 0s; stroke-dasharray: 307.919, 307.919; stroke-dashoffset: 307.919;"></path>
        </svg>
    </div>
    <script src="https://www.google.com/recaptcha/api.js?render=explicit" async defer></script>
    <script src="@Domain/Content/assets/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="@Domain/Content/assets/js/app.min.js"></script>
    <script src="@Domain/Content/assets/js/main.js"></script>
    @RenderSection("scripts", false)

</body>
</html>