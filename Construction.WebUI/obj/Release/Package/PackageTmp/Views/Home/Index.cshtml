@using System.Configuration;
@using Construction.WebUI.AppCode;
@{
    string Domain = Request.Url.Scheme + "://" + Request.Url.Authority;
    string ProjectName = ConfigurationManager.AppSettings["ProjectName"];
    MainCode mainCode = new MainCode(Domain, Request.RawUrl);
    var data = mainCode.GetSpecialPage();
    ViewBag.Title = data.Title;
    ViewBag.MetaKeywords = data.Keywords;
    ViewBag.MetaDescription = data.Description;
}
<div class="fs_controls">

    <div class="title_wrapper">
        <a href="fs_link" class="fs_link"><h2 class="fs_title"></h2></a>
        <span class="fs_descr"></span>
    </div>
    <div class="fs_controls_append">
        <a href="javascript:void(0)" class="close_controls"></a>
    </div>
</div>
<a href="javascript:void(0)" class="close_controls show_me_always"></a>

@section Scripts{
    <script type="text/javascript" src="@Domain/Content/assets/page/index.js"></script>
    <script type="text/javascript" src="@Domain/Content/assets/js/fs_gallery.js"></script>
}