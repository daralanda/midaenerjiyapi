@using Construction.WebUI.AppCode;
@{
    string Domain = Request.Url.Scheme + "://" + Request.Url.Authority;
    DashboardMainCode mainCode = new DashboardMainCode(Domain);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-6 col-sm-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mb-4">İletişim Ayarları</h4>
            <div class="form-row">
                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <label for="name">Host</label>
                        <input type="text" class="form-control" id="Host" placeholder="Host">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label for="name">Email</label>
                        <input type="text" class="form-control" id="Email" placeholder="Email">
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label for="name">Password</label>
                        <input type="text" class="form-control" id="Password" placeholder="Password">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label for="name">Port</label>
                        <input type="text" class="form-control" id="Port" placeholder="Port">
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        <label for="name">SSL</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="EnableSsl">
                            <label class="form-check-label" for="EnableSsl">
                                Var / Yok
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-lg-2 col-sm-12">
                    <button type="submit" onclick="PostData()" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="@mainCode.Domain/Content/Dashboard/assets/ControllerJs/ContactSetting.js"></script>>
}